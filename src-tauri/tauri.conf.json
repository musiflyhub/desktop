{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Musifly",
  "version": "1.1.2",
  "identifier": "com.musifly.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Musifly",
        "width": 1400,
        "height": 800,
        "minWidth": 1400,
        "minHeight": 800,
        "url": "https://open.musifly.net/",
        "decorations": false,
        "visible": false
      },
      {
        "label": "updater",
        "title": "Checking Updates",
        "width": 400,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "center": true,
        "url": "index.html",
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "musifly"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI1REJDQjk3NDI3MjJDMUMKUldRY0xISkNsOHZiSmE3bEVidU5VQzF3Q2tMZ2pqRXNiaHV6UTZBWTVoSFg2NFRIV2JsMHZoRisK",
      "endpoints": [
        "https://github.com/musiflyhub/desktop/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}